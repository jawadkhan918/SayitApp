<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/main_image"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        >
        <ImageView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/nliveo_black"
            />


        <ImageView
            android:id="@+id/leftarrow"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_marginTop="70dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/icon_arrow_grey"
            />


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#99000000"
            android:layout_alignParentBottom="true"
            >

            <de.hdodenhof.circleimageview.CircleImageView
               android:layout_gravity="center_vertical"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/logo_image"
                android:layout_width="35dp"
                android:layout_height="35dp"
                app:civ_border_color="#000000"
                app:civ_border_width="1dp"
                android:layout_marginLeft="10dp"
                android:src="@color/nliveo_black"     />
          <LinearLayout
              android:layout_width="200dp"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:gravity="center_vertical"
              android:layout_gravity="center_vertical">
            <TextView
                android:id="@+id/category_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Title"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:textColor="#ffffff"/>
              <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal"
                  android:gravity="center_vertical"
                  android:layout_gravity="center_vertical">

              <TextView
            android:id="@+id/audiosText"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="Available Audios :"
                  android:gravity="center"
                  android:paddingLeft="10dp"
                  android:textColor="#ffffff"/>
                  <TextView
                      android:id="@+id/availableAudios"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="0"
                      android:gravity="center"
                      android:paddingLeft="5dp"
                      android:textColor="#ffffff"/>

              </LinearLayout>

          </LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">
            <TextView
                android:id="@+id/catStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Type"

                android:textColor="#ffffff"/>

</LinearLayout>

        </LinearLayout>


    </RelativeLayout>


</LinearLayout>
